{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mx-auto p-8">
        <h1 class="text-3xl font-bold text-gray-800 mb-8">Modifier un article</h1>

        {{ form_start(form, { 'attr': { 'class': 'space-y-6' } }) }}
        
        <div>
            {{ form_label(form.title, null, {'label_attr': {'class': 'block text-gray-700 font-semibold mb-2'}}) }}
            {{ form_widget(form.title, {'attr': {'class': 'block w-full p-2 border border-gray-300 rounded'}}) }}
            {{ form_errors(form.title) }}
        </div>

        <div>
            {{ form_label(form.text, null, {'label_attr': {'class': 'block text-gray-700 font-semibold mb-2'}}) }}
            {{ form_widget(form.text, {'attr': {'class': 'block w-full p-2 border border-gray-300 rounded'}}) }}
            {{ form_errors(form.text) }}
        </div>

        <div class="text-right">
            {{ form_widget(form.save, {'attr': {'class': 'bg-blue-500 text-white font-bold py-2 px-4 rounded hover:bg-blue-600'}}) }}
            <a href="{{ path('article.show', {'id': article.id}) }}" class="bg-gray-500 text-white font-bold py-2 px-4 rounded hover:bg-gray-600">
                Annuler
            </a>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}